{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "src/env.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@/components/*": ["./templates/components/*"],
      "@/composites/*": ["./templates/composites/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/graphql/*": ["./graphql/*"],
      "@/actions/*": ["./data/actions/*"],
      "@/lib/*": ["./helpers/lib/*"],
      "@/context/*": ["./helpers/context/*"],
      "@/hooks/*": ["./helpers/hooks/*"],
      "@/auth": ["./auth.ts"],
      "@/types": ["./app/types.d.ts"]
    }
  }
}
