{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "src/env.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@/layouts/*": ["./src/layouts/*"],
      "@/components/*": ["./templates/components/*"],
      "@/composites/*": ["./templates/composites/*"],
      "@/types": ["./types"],
      "@/utils/*": ["./utils/*"]
    }
  }
}
