---
import { Icon } from "astro-icon/components";
const { rating } = Astro.props

let ratingArray = [];

for(let i = 0; i < rating; i++) {
    ratingArray.push(i)
}
 
---

<ul class="flex flex-row gap-0 ml-0">
    {ratingArray.map(() => (<li> <Icon name="ic:round-star-rate" class="w-5 h-5 text-primary" /></li>))}
</ul>