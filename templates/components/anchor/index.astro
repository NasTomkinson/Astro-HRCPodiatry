---
import { Icon } from "astro-icon/components"
import type { Props } from './types';

const { variant, label, href, icon, target, class: className }: Props = Astro.props;

---

<a class={`button ${variant} ${className}`} aria-label={label} href={href} target={target}> 
    { icon && (
       <Icon name={icon} class="w-5 h-5"/> 
    )}
    {label} 
</a>